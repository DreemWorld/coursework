<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileInfoChangeFragment">

    <EditText
        android:id="@+id/profile_info_change_fullname"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="30sp"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="3dp"
        android:hint="Full name"
        android:layout_marginBottom="5sp"
        android:background="@drawable/fields"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/profile_info_change_username"
        android:layout_width="360dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fields"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="3dp"
        android:hint="Username"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_info_change_fullname" />

    <EditText
        android:id="@+id/profile_info_change_bio"
        android:layout_width="363dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fields"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="3dp"
        android:hint="About yourself"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_info_change_username" />

    <android.widget.Button
        android:id="@+id/profile_info_change_photo"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        android:text="Change Photo"
        android:textSize="@dimen/normal_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_info_change_bio" />

    <android.widget.Button
        android:id="@+id/profile_info_change_profile_info"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Change info about me"
        android:textSize="@dimen/normal_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_info_change_photo"
        app:layout_constraintVertical_bias="0.122" />

</androidx.constraintlayout.widget.ConstraintLayout>